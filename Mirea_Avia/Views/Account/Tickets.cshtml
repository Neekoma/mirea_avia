@using Mirea_Avia.Models.Users;

@model List<PurchasedTicket>

@{
    ViewData["Title"] = "Результат поиска";
}


<div class="text-center">
    @{
        if (Model == null)
        {
            <h2>Еще нет купленных билетов</h2>
        }
        else
        {
            if (Model.Count == 0)
            {
                <h2>Еще нет купленных билетов</h2>
            }
            else
            {
                <h2>Мои билеты</h2>
                foreach (var ticket in Model)
                {
                    @await Html.PartialAsync("PurchasedTicketCard", ticket)
                    <hr />
                }
            }

        }
    }
</div>
